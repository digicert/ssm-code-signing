{
  "name": "@digicert/ssm-client-tools-installer",
  "version": "1.0.0",
  "description": "",
  "main": "./build/index.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "set NODE_ENV=development&& tsc && node ./build/index.js",
    "debug": "set NODE_ENV=development&& tsc && node inspect ./build/index.js",
    "compile": "tsc",
    "compile-watcher": "tsc -w",
    "commit": "git-cz",
    "lint": "eslint .",
    "prepare": "husky install",
    "semantic-release": "semantic-release --branches master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint && test"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@semantic-release/github": "^8.0.6",
    "axios": "^0.21.4",
    "azure-pipelines-task-lib": "^3.1.4",
    "azure-pipelines-tool-lib": "^1.3.2",
    "dotenv": "^16.0.1",
    "extract-zip": "^2.0.1",
    "semantic-release": "^19.0.5"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^16.11.45",
    "@types/q": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "sync-request": "^6.1.0",
    "ts-jest": "^29.0.2",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [],
    [
      "@semantic-release/github",
      {
        "assets": "dist/*.tgz"
      }
    ]
  ]
}
